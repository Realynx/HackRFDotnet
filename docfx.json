{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../.\\HackRFDotnet\\HackRFDotnet",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "docs/api",
      "outputFormat": "apiPage"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "docs/",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "HackrfDotnet",
      "_appTitle": "HackrfDotnet",
      "_appFooter": "<span>Github <a href=\"https://github.com/Realynx/HackRFDotnet\">HackRfDotnet</a>.</span>",
      "_enableSearch": true,
      "pdf": true
    }
  }
}